<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/workerSlotCardView"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/md_green_100"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:id="@+id/projectWorkerSlotSmallLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/projectWorkerSlotSmallEmployeeName"
            android:layout_width="226dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="135dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/projectWorkerSlotSmallDescriptionTextView"
            android:layout_width="223dp"
            android:layout_height="74dp"
            android:layout_below="@+id/projectWorkerSlotSmallEmployeeName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="135dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/projectWorkerSlotSmallEmployeeName"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/projectWorkerSlotInviteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="-18dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="@string/invite" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>